{
  "root": true,
  "extends": [
    "@nuxt/eslint-config",
    "plugin:@intlify/vue-i18n/recommended"
  ],
  "settings": {
    "vue-i18n": {
      "localeDir": "./locales/*.{json,json5,yaml,yml}",
      "messageSyntaxVersion": "^9.0.0"
    }
  },
  "rules": {
    "@intlify/vue-i18n/key-format-style": [
      "error",
      "kebab-case",
      {
        "allowArray": false,
        "splitByDots": false
      }
    ],
    "@intlify/vue-i18n/no-raw-text": [
      "warn",
      {
        "ignorePattern": "^[+-_#:()&*$€©]+$",
        "ignoreText": []
      }
    ]
  }
}